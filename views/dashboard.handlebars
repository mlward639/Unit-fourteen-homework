<header>
  <nav>
    <a href="/">Home</a>
    |
    <a href="/dashboard">Dashboard</a>
    |
    <a id="logout" onclick="logout()">Logout</a>
  </nav>
  <h1>
    <a href="/" id="title">Your Dashboard</a>
  </h1>
</header>

{{#if user.allposts.length}}
  {{#each user.allposts as |post|}}
    <div class="row mb-4 posts">
      <div class="col-md-5 dashboard">
        <h2>
          <a href="/dashboard/{{post.id}}">{{title}}</a><span>
            Posted on
            {{format_date date_created}}</span>
        </h2>
        <p>{{content}}</p>
        <button class="br-btn btn-sm"><a href="/dashboard/{{post.id}}">Edit Post</a></button>
        <button
          class="btn-sm btn-danger delete br-btn"
          data-id="{{post.id}}"
          onclick="delButtonHandler(event)"
        >Delete</button>
      </div>
    </div>
  {{/each}}

{{/if}}

<div class="form-group">
  <button
    class="btn btn-secondary"
    type="button"
    id="plusNewPost"
    onclick="plusNewPost()"
  >+ New Post</button>
</div>

<script>
  function plusNewPost() { document.location.replace("/yourDashboardAdd"); }</script>
<script src="/js/login.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/plusNewPost.js"></script>
<script src="/js/buttons.js"></script>