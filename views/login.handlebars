    <div class="row">
      <div class="col-md-6 form-container">
        <h2>Login</h2>
    
        <form class="form login-form">
          <div class="form-group">
            <label for="username-login">Username:</label>
            <br>
            <input class="form-input" type="text" id="username-login" />
          </div>
          <div class="form-group">
            <label for="password-login">Password:</label>
            <br>
            <input class="form-input" type="password" id="password-login" />
          </div>
          <br>
          <div class="form-group">
            <button class="btn btn-primary" id="loginBtn" type="submit" onclick="loginFormHandler(event)">Login</button>
          </div>
          <br>
          <a href="/signup" id="#signuppage" id="signUpInsteadBtn">Sign Up instead</a>
        </form>
      </div>

      <script src='./js/login.js'></script>

