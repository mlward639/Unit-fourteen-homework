<body>
  <div class="flex-column justify-space-around">

    <div class="row">
          <div class="col-md-6 form-container">
            <h2>Edit Post</h2>
        
            <form class="form newPost-form">
              <div class="form-group">
                <label for="updateTitle">Title:</label>
                <br>
                <input class="form-input" type="text" id="updateTitle" value="{{post.title}}"/>
              </div>
              <div class="form-group">
                <label for="updateContent">Content:</label>
                <br>
                <input class="form-input" type="text" id="updateContent" value="{{post.content}}" />
              </div>
              <br>
              <div class="form-group">
                <button class="btn btn-primary" type="submit" onclick="editFormHandler(event)">Update Post</button>
              </div>
              <div class="form-group">
                <button class="btn btn-primary" data-id="{{post.id}}" type="submit" onclick="delButtonHandler(event)">Delete</button>
              </div>



<script src="/js/buttons.js"></script>
<script src="/js/login.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/plusNewPost.js"></script>
