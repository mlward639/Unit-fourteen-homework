<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <nav>
        <a href="/home">Home</a> |
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <a href="/dashboard">Dashboard</a> |
        <a onclick="logout()" id="logout">Logout</a>
        {{else}}
        <a href="/login">Dashboard</a> |
        <a href="/login">Login</a>
        {{/if}}
      </nav>
      <h1>
        <a href="/" id="title">Your Dashboard</a>
      </h1>
    </header>

    <div class="row">
          <div class="col-md-6 form-container">
            <h2>Edit Post</h2>
        
            <form class="form newPost-form">
              <div class="form-group">
                <label for="updateTitle">Title:</label>
                <br>
                <input class="form-input" type="text" id="updateTitle" />
              </div>
              <div class="form-group">
                <label for="updateContent">Content:</label>
                <br>
                <input class="form-input" type="text" id="updateContent" />
              </div>
              <br>
              <div class="form-group">
                <button class="btn btn-primary" type="submit">Update Post</button>
              </div>
              <div class="form-group">
                <button class="btn btn-primary" type="submit">Delete</button>
              </div>



<script src="/js/buttons.js"></script>
<script src="/js/login.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/plusNewPost.js"></script>