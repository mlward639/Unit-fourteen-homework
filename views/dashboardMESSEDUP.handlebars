<header>
  <nav>
    <a href="/">Home</a>
    |
    <!-- Conditionally render login or logout links -->
    {{#if logged_in}}
      <a href="/dashboard">Dashboard</a>
      |
      <a id="logout" onclick="logout()">Logout</a>
    {{else}}
      <a href="/login">Login</a>
    {{/if}}
  </nav>
  <h1>
    <a href="/" id="title">Your Dashboard</a>
  </h1>
</header>

<div>
  <p>TEST</p>
</div>
{{#each user.posts as |post|}}
  <div class="row mb-4 posts">
    <div class="col-md-5">
      <h2>
        <a href="/posts/{{user.id}}">{{title}}TEST</a><span>: Posted by
          {{user.username}}
          on
          {{format_date date_created}}</span>
      </h2>
      <p>{{content}}</p>
    </div>
  </div>
{{/each}}

<script src="/js/buttons.js"></script>
<script src="/js/login.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/plusNewPost.js"></script>