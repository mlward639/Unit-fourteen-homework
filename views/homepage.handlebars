<header>

</header>

<header class="display-flex justify-space-between align-center p-2">
  <nav>
    <a href="/home">Home</a>
    |
    <!-- Conditionally render login or logout links -->
    {{#if logged_in}}
      <a href="/dashboard">Dashboard</a>
      |
      <a onclick="logout()" id="logout">Logout</a>
    {{else}}
      <a href="/login">Dashboard</a>
      |
      <a href="/login">Login</a>
    {{/if}}
  </nav>
  <h1>
    <a href="/" id="title">The Tech Blog</a>
  </h1>
</header>

<!-- Loop over each object in the blogs array -->
{{#each posts as |post|}}
  <div class="row mb-4 posts">
    <div class="col-md-5 homepage">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        <a href="/posts/{{user.id}}">{{title}}</a><span>: Posted by
          {{user.username}}
          on
          {{format_date date_created}}</span>
      </h2>
      <p>{{content}}</p>
    </div>
  </div>
{{/each}}

<script src="/js/buttons.js"></script>
<script src="/js/login.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/plusNewPost.js"></script>