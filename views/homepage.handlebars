<header>
  <h1>
    <a href="/" id="title">The Tech Blog</a>
  </h1>
</header>

<!-- Loop over each object in the blogs array -->
{{#each posts as |post| }}
    <div class="row mb-4 posts">
      <div class="col-md-5 homepage">
        <h2>
          <!-- Call helper function with triple brackets to render the emoji span as HTML -->
          <a href="/posts/{{id}}">{{title}}</a><span>: Posted by {{user.username}} on {{format_date date_created}}</span>
        </h2>
        <p>{{content}}</p>
      </div>
    </div>
{{/each}}
